<script type="text/javascript">
    document.querySelectorAll('.card.mb-3').forEach(item => {
        item.addEventListener('click', event => {
            // Extrae el id del producto desde el id del elemento
            const productId = event.currentTarget.id.split('-')[1];
            window.location.href = `http://localhost:8080/products/${productId}`;
        })
    })
</script>


<script>

    document.querySelectorAll('.counter').forEach(function (counterContainer) {
        let counterDisplay = counterContainer.querySelector('.counterDisplay');
        let incrementButton = counterContainer.querySelector('.incrementButton');
        let decrementButton = counterContainer.querySelector('.decrementButton');
        let addToCartButton = counterContainer.closest('.card-body').querySelector('form button[type=submit]');


        decrementButton.disabled = true;

        let counter = parseInt(counterDisplay.getAttribute('data-counter'));
        let stockElement = counterContainer.closest('.card-body').querySelector('.stock');
        let limit = parseInt(stockElement.getAttribute('data-stock'));

        let originalLimit = limit;  //fix logic error :D

        incrementButton.addEventListener('click', function () {
            if (counter < originalLimit) {
                counter++;
                limit--;

                if (counter == originalLimit) {
                    incrementButton.disabled = true;

                }
                if (counter > 0) {
                    decrementButton.disabled = false;
                }
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'El contador ha alcanzado su límite máximo de stock ' + originalLimit,
                })
            }
            counterDisplay.textContent = counter;
            counterDisplay.setAttribute('data-counter', counter);
        });

        decrementButton.addEventListener('click', function () {
            if (counter > 1) {
                counter--;
                limit++;

                if (incrementButton.disabled == true) { // If the incrementButton is disabled
                    incrementButton.disabled = false; // enable the button
                }
                if (counter == 1) {
                    decrementButton.disabled = true; // disable the decrement button
                }
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'El contador ya está en su límite mínimo de stock 1',
                })
            }
            counterDisplay.textContent = counter;
            counterDisplay.setAttribute('data-counter', counter);
        });

        addToCartButton.addEventListener('click', function () {

            let quantityInput = counterContainer.closest('.card-body').querySelector('form input[name=quantity]');
            quantityInput.value = counter;

        });

    });


</script>