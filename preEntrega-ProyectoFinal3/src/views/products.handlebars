<section id="products" class="container">

    <h1 class="mt-3" id="title">Productos</h1>

    <haeder>

        <h4>Ordenar por:</h4>
        <ul>
            <li><a id="linkDesc" href="">Mayor precio</a></li>
            <li><a id="linkAsc" href="">Menor precio</a></li>
        </ul>

        <h4>Categorias:</h4>
        <ul>
            <li><a id="CPU" href="">Procesadores</a></li>
            <li><a id="GPU" href="">Graficas</a></li>
            <li><a id="todo" href="">Todo</a></li>
        </ul>

        <form action="/carts/{{user._id}}" method="post">
            <input type="hidden" name="productId" value="{{this._id}}">
            <input type="hidden" name="quantity" value="1">
            <button type="submit" class="btn btn-primary">Ir al carrito</button>
        </form>


    </haeder>

    <div id="products-container">
        {{#each products.docs}}
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-10">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">${{this.price}}</p>
                        <p class="card-text">ID: {{this._id}}</p>
                        <p class="card-text">Categoria: {{this.category}}</p>
                        <p class="card-text stock" data-stock="{{this.stock}}">Stock: {{this.stock}}</p>


                        <div class="container">

                            <div class="row align-items-center">

                                <div class="col d-flex justify-content-center">
                                    <div class="d-flex flex-column justify-content-center align-items-center">
                                        <a href="http://localhost:8080/api/products/{{this._id}}">
                                            <button type="button" class="btn btn-primary">Ver más</button>
                                        </a>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="counter d-flex justify-content-center align-items-center">
                                        <button class="decrementButton btn btn-counter">-</button>
                                        <p class="counterDisplay mx-3" data-counter="0">0</p>
                                        <button class="incrementButton btn btn-counter">+</button>
                                    </div>
                                </div>

                                <div class="col d-flex justify-content-center">
                                    <div class="d-flex flex-column justify-content-center align-items-center">
                                        <form action="/api/carts/{{../user._id}}/cart" method="post">
                                            <input type="hidden" name="productId" value="{{this._id}}">
                                            <input type="hidden" name="quantity" value="1">
                                            <button type="submit" class="btn btn-dark"
                                                onclick="addProductAlert()">Añadir al
                                                carrito</button>
                                        </form>
                                    </div>
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}


        <ul class="pagination">
            <li class="page-item">
                {{#if products.hasPrevPage}}
                <a class="page-link" href={{products.prevLink}} aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
                {{else}}
                <a class="page-link disabled" href="" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
                {{/if}}
            </li>

            {{#each products.totalPagesArray}}
            <li class="page-item"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
            {{/each}}

            <li class="page-item">
                {{#if products.hasNextPage}}
                <a class="page-link" href={{products.nextLink}} aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
                {{else}}
                <a class="page-link disabled" href="" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
                {{/if}}
            </li>
        </ul>
    </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>

<script>
    document.querySelectorAll('.counter').forEach(function(counterContainer) {
        var counterDisplay = counterContainer.querySelector('.counterDisplay');
        var incrementButton = counterContainer.querySelector('.incrementButton');
        var decrementButton = counterContainer.querySelector('.decrementButton');

        var counter = parseInt(counterDisplay.getAttribute('data-counter'));
        var stockElement = counterContainer.closest('.card-body').querySelector('.stock');
        var limit = parseInt(stockElement.getAttribute('data-stock'));
        
        var originalLimit = limit;  //fix logic error :D

        incrementButton.addEventListener('click', function() {
            if (counter < originalLimit) { 
                counter++;
                limit--;
                stockElement.textContent = 'Stock: ' + limit;
                stockElement.setAttribute('data-stock', limit);
            } else {
                alert('El contador ha alcanzado su límite máximo de ' + originalLimit);
            }
            counterDisplay.textContent = counter;
            counterDisplay.setAttribute('data-counter', counter);
        });

        decrementButton.addEventListener('click', function() {
            if (counter > 0) {
                counter--;
                limit++;
                stockElement.textContent = 'Stock: ' + limit;
                stockElement.setAttribute('data-stock', limit);
            } else {
                alert('El contador ya está en su límite mínimo de 0');
            }
            counterDisplay.textContent = counter;
            counterDisplay.setAttribute('data-counter', counter);
        });
    });
</script>

